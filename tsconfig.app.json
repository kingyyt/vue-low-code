{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "src/api/*/*/*.ts",
    "src/stores/*/*.ts",
    "src/utils/*/*.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  // "exclude": ["src/**/__tests__/*", "src/packages/**/*.vue"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
